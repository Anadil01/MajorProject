<style>
.search-btn {
    background-color: #fe424d;
    color: #fff;
    border-radius: 25px;
    padding: 0.5rem 1rem;
    white-space: nowrap;
  }
  .search-btn:hover {
    background-color: #e63946;
    color: #fff;
  }

  .search-btn i {
    display: inline;
    margin-right: 0.5rem;
  }

  .search-input {
    border-radius: 25px;
    padding: 0.5rem 1rem;
    font-size: 1rem;
  }

  /* MOBILE ONLY (< 768px) - Show search and explore outside menu */
  @media (max-width: 767px) {
    .navbar-nav .nav-link {
      padding: 0.5rem 0;
    }
    
    .navbar-collapse {
      padding-top: 1rem;
      background-color: #fff;
      border-radius: 1rem;
      padding: 1rem;
      margin-top: 0.5rem;
    }
    
    .mobile-search-wrapper {
      display: flex;
      align-items: center;
      gap: 0.5rem;
      margin-right: auto;
      margin-left: 0.5rem;
    }
    
    .mobile-search-form {
      display: flex;
      gap: 0.3rem;
    }
    
    .mobile-search-form .search-input {
      width: 120px;
      padding: 0.4rem 0.8rem;
      font-size: 0.85rem;
    }
    
    .mobile-search-form .search-btn {
      padding: 0.4rem 0.6rem;
      font-size: 0.85rem;
    }
    
    .mobile-search-form .search-btn i {
      margin-right: 0;
    }
    
    .mobile-search-form .btn-text {
      display: none;
    }
    
    .mobile-explore-btn {
      background-color: #fe424d;
      color: #fff;
      border-radius: 20px;
      padding: 0.4rem 0.8rem;
      font-size: 0.85rem;
      text-decoration: none;
      white-space: nowrap;
    }
    
    .mobile-explore-btn:hover {
      background-color: #e63946;
      color: #fff;
    }
    
    /* Hide explore in collapsed menu on mobile */
    .mobile-hide-explore {
      display: none !important;
    }
  }

  /* TABLET (768px - 991px) - Show search next to toggle */
  @media (min-width: 768px) and (max-width: 991px) {
    .nav-back-color {
      background-color: #fff;
      border-radius: 1rem;
      padding: 0.5rem 1rem;
    }
    
    .tablet-search-form {
      display: flex;
      gap: 0.5rem;
      margin-left: auto;
      margin-right: 1rem;
    }
    
    .search-input {
      width: 200px;
    }
  }

  /* DESKTOP (â‰¥ 992px) - Show search horizontally */
  @media (min-width: 992px) {
    .nav-back-color {
      background-color: #fff;
      border-radius: 1rem;
      padding: 0.5rem 1rem;
    }
    
    .search-input {
      padding: 0.5rem 1.5rem;
      min-width: 250px;
    }
    
    .d-lg-flex {
      gap: 1rem;
    }
  }

  /* Navbar brand styling */
  .navbar-brand {
    font-size: 1.5rem;
    color: #fe424d;
  }

  .navbar-brand:hover {
    color: #e63946;
  }
  
  /* Ensure proper alignment */
  .navbar {
    align-items: center;
  }
</style>

<nav class="navbar navbar-expand-md bg-body-light border-bottom sticky-top">
  <div class="container-fluid">
    <a class="navbar-brand" href="/listings">
      <i class="fa-regular fa-compass"></i>
    </a>
    
    <!-- Mobile Explore Button & Search Form (visible only on mobile) -->
    <div class="d-flex d-md-none mobile-search-wrapper">
      <a href="/listings" class="mobile-explore-btn">Explore</a>
      <form
        class="mobile-search-form"
        role="search"
        
      >
        <input
          class="form-control search-input"
          type="search"
          name="q"
          placeholder="Search"
          aria-label="Search"
        />
        <button class="btn search-btn" type="submit">
          <i class="fa-solid fa-magnifying-glass"></i><span class="btn-text">Search</span>
        </button>
      </form>
    </div>
    
    <!-- Tablet Search Form (visible only on tablet, next to toggle button) -->
    <form
      class="d-none d-md-flex d-lg-none tablet-search-form"
      role="search"
      
    >
      <input
        class="form-control search-input"
        type="search"
        name="q"
        placeholder="Search destinations"
        aria-label="Search"
      />
      <button class="btn search-btn" type="submit">
        <i class="fa-solid fa-magnifying-glass"></i>Search
      </button>
    </form>
    
    <button
      class="navbar-toggler"
      type="button"
      data-bs-toggle="collapse"
      data-bs-target="#navbarNavAltMarkup"
      aria-controls="navbarNavAltMarkup"
      aria-expanded="false"
      aria-label="Toggle navigation"
    >
      <span class="navbar-toggler-icon"></span>
    </button>
    
    <div
      class="collapse navbar-collapse nav-back-color"
      id="navbarNavAltMarkup"
    >
      <div class="navbar-nav">
        <!-- Explore hidden on mobile, visible on tablet and desktop -->
        <a class="nav-link d-none d-md-block" href="/listings">Explore</a>
      </div>

      <div class="d-lg-flex ms-auto align-items-center">
        <!-- Desktop Search Form (visible only on large screens) -->
        <form
          class="d-none d-lg-flex mb-0 me-lg-3"
          role="search"
          
        >
          <input
            class="form-control me-2 search-input"
            type="search"
            name="q"
            placeholder="Search destinations"
            aria-label="Search"
          />
          <button class="btn search-btn" type="submit">
            <i class="fa-solid fa-magnifying-glass"></i>Search
          </button>
        </form>

        <div class="navbar-nav">
          <!-- "Airbnb your home" visible on all screen sizes -->
          <a
            class="nav-link"
            href="/listings/new"
          >Airbnb your home</a>
          
          <% if(!currUser) { %>
          <a class="nav-link" href="/signup"><b>Signup</b></a>
          <a class="nav-link" href="/login"><b>Log in</b></a>
          <% } %>
          <% if(currUser) { %>
          <a class="nav-link" href="/logout"><b>Log out</b></a>
          <% } %>
        </div>
      </div>
    </div>
  </div>
</nav>